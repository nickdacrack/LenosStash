<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/ic_calendar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:id="@+id/tvEvents_Day"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

            <TextView
                android:text="MAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEvents_Date"
                android:layout_centerHorizontal="true"
                android:id="@+id/tvEvents_Month"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="18dp" />

            <TextView
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEvents_Date"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="DAY 1"
                android:id="@+id/tvEvents_Heading"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/tvEvents_Description"
                android:layout_alignStart="@+id/tvEvents_Description"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>